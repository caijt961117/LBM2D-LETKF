.PHONY: test test_obs test_ly test_dummy test_nud test_letkf
test: 
	$(MAKE) test_obs
	$(MAKE) test_ly
	$(MAKE) test_dummy
	$(MAKE) test_nud
	$(MAKE) test_letkf

test_obs:
	@echo test building \'\'TEST=OBSERVE\'\' ...
	@$(MAKE) clean > /dev/null
	@$(MAKE) -j -k TEST=OBSERVE > /dev/null && echo test passed || echo test failed

test_ly:
	@echo test building \'\'TEST=LYAPNOV\'\' ...
	@$(MAKE) clean > /dev/null
	@$(MAKE) -j -k TEST=LYAPNOV LY_EPSILON=1e-6 > /dev/null && echo test passed || echo test failed

test_dummy:
	@echo test building \'\'TEST=DA_DUMMY\'\' ...
	@$(MAKE) clean > /dev/null
	@$(MAKE) -j -k TEST=DA_DUMMY > /dev/null && echo test passed || echo test failed

test_nud:
	@echo test building \'\'TEST=DA_NUDGING\'\' ...
	@$(MAKE) clean > /dev/null
	@$(MAKE) -j -k TEST=DA_NUDGING > /dev/null && echo test passed || echo test failed

test_letkf:
	@echo test building \'\'TEST=DA_LETKF\'\' ...
	@$(MAKE) clean > /dev/null
	@$(MAKE) -j -k TEST=DA_LETKF > /dev/null && echo test passed || echo test failed
